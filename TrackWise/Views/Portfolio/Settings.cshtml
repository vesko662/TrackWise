@model PortfolioUpdateDto

<div class="container py-5">
    <div class="card mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h4 class="card-title mb-4">Portfolio settings</h4>
            <form asp-action="Settings" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Portfolio name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CurrencyId" class="form-label">Your home currency</label>
                    <select asp-for="CurrencyId" asp-items="ViewBag.Currencies" class="form-select"></select>
                    <span asp-validation-for="CurrencyId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-outline-secondary" onclick="history.back()">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card mx-auto mt-4" style="max-width: 600px;">
        <div class="card-body">
            <h5 class="card-title mb-3">Delete portfolio</h5>
            <div class="text-center mt-4">
                <button type="button" class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                    <i class="bi bi-trash-fill me-1"></i> Delete portfolio
                </button>
            </div>

            <div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteConfirmModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="modal-header bg-danger text-white">
                                <h5 class="modal-title" id="deleteConfirmModalLabel">Confirm deletion</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to permanently delete this portfolio? This action cannot be undone.
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn btn-danger">Yes, delete</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
